<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    tools:context=".Fridge.ShowAllProducts.FridgeActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="156dp"
        android:layout_height="112dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="19dp"
        android:src="@drawable/kitchen_icon"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewAllProductsDelete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAllProductsDelete"
        android:layout_width="404dp"
        android:layout_height="555dp"
        android:layout_marginTop="49dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAnuluj" />

    <Button
        android:id="@+id/buttonUsun"
        android:layout_width="93dp"
        android:layout_height="45dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="32dp"
        android:background="@color/colorGray"
        android:text="UsuÅ„"
        android:textColor="@color/darkGray"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonAnuluj"
        android:layout_width="93dp"
        android:layout_height="42dp"
        android:layout_marginStart="81dp"
        android:layout_marginTop="24dp"
        android:background="@color/colorGray"
        android:text="Anuluj"
        android:textColor="@color/darkGray"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/buttonUsun" />


</androidx.constraintlayout.widget.ConstraintLayout>